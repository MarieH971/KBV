{% extends 'base.html.twig' %}

{% block title %}Modifier l'Adhérent
{% endblock %}

{% block body %}
	<h1>Modifier l'adhérent
		{{ adherent.nom }}
		{{ adherent.prenom }}</h1>

	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button type="submit" class="btn btn-warning">Mettre à jour</button>
	{{ form_end(form) }}

	<a href="{{ path('adherent_show', {'id': adherent.id}) }}" class="btn btn-secondary mt-3">Retour à l'adhérent</a>
{% endblock %}
